<h1>Hi Librarian</h1>

<h2>Add a book:</h2>

<form action="/books/new" method="post">
  <div class="form-group">
  <label for="title">Book Title</label>
  <input name="title" id="title" type="text" class="form-control" placeholder="ex: Harry Potter and the Sorcerer's Stone">
  </div>
  <div class="form-group">
    <label for="author">Book Author</label>
    <input name="author" id="author" type="text" class="form-control" placeholder="ex: J.K. Rowling">
  </div>

  <button type="submit" class="btn btn-success">Add Book!</button>
</form>

<ul>
  <% @books.each do |book| %>
    <li><a href="/book/<%= book.id() %>"><%= book.title() %>; <%= book.author() %></a></li>
  <% end %>
</ul>
